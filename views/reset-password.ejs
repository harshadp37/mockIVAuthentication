
<link rel='stylesheet' type='text/css' href='/css/resetPassword.css'>

<div class="resetPasswordDiv">
    <div class="resetPasswordModal">
        <div class="header">
            <span>Reset Password</span>
        </div>
        <div class="body">
            <span class="error"></span>
            <span class="success"></span>

            <form class="reset-password-form" method="POST" action="/user/password-reset">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter Email..." value="<%= locals.email %>" disabled/>
                <label for="password">New Password</label>
                <input type="password" id="password" name="password" placeholder="Enter New Password..." />
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password..." />
                
                <button type="submit">Change Password</button>
            </form>
        </div>
    </div>
</div>